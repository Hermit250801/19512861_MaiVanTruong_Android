<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Bai2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lí sản phẩm"
        android:background="#008000"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Danh Mục:"
            android:textSize="20dp"
            />

        <Spinner
            android:id="@+id/spinner_SP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Mã Sp:"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/editText_MaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Tên Sp:"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/editText_TenSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnNhapSp"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:text="Nhập SP"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách sản phẩm theo danh mục"
        android:background="#008000"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp"
        />

    <ListView
        android:id="@+id/listView_SanPham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
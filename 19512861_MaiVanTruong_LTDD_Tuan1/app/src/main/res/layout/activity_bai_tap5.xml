<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BaiTap5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chương trình tính tiền bán sách online"
                android:background="#008284"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffff00"
                android:textSize="20dp"
                android:text="Thông tin hóa đơn:"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Tên Khách Hàng: "
                    />

                <EditText
                    android:id="@+id/editText_TenKhachHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Số lượng sách: "
                    />

                <EditText
                    android:id="@+id/editText_SoLuongSach"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkbox_KhachVIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="60dp"
                android:text="Khách hàng là VIP"
                android:textSize="20dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Thành tiền: "
                    />

                <TextView
                    android:id="@+id/textView_ThanhTien"
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#c5c2c5"
                    android:textSize="20dp"
                    android:textColor="#339133"
                    android:textAlignment="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btnTinhTT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tính TT"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/btnTiep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiep"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/btnThongKe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thống Kê"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffff00"
                android:textSize="20dp"
                android:text="Thông tin thống kê:"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Tổng sô KH: "
                    />

                <EditText
                    android:layout_marginLeft="50dp"
                    android:id="@+id/editText_TongKH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Tổng số KH là vip: "
                    />

                <EditText
                    android:id="@+id/editText_TongKHVIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Tổng doanh thu: "
                    />

                <EditText
                    android:id="@+id/editText_TongDoanhThu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_marginTop="300dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#008284"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
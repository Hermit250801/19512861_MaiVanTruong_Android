<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Bai5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lí nhân viên"
        android:textColor="#fff"
        android:background="#008000"
        android:textSize="20dp"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã NV:"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/editText_MaNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Vui lòng nhập thông tin"
            android:layout_marginLeft="60dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên NV:"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/editText_TenNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Vui lòng nhập thông tin"
            android:layout_marginLeft="59dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại NV:"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            />

        <RadioGroup
            android:id="@+id/radioGroup_LoaiNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="58dp"
            >
            <RadioButton
                android:id="@+id/radioButton_ChinhThuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chính thức"
                android:checked="true"
                />

            <RadioButton
                android:id="@+id/radioButton_ThoiVu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời vụ"
                />

        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnNhapNV"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="#cecece"
        android:text="Nhập NV" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="#008000"
        android:textSize="20dp"
        android:textAlignment="center"
        />

    <ListView
        android:id="@+id/listView_NhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

</LinearLayout>